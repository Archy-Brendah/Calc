<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"

        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:padding="10pt" android:background="@color/grey">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etShowNumber" tools:text="0" android:gravity="right" android:layout_marginTop="10pt"
            android:textSize="36sp" android:background="@color/grey"
            android:textColor="@color/white" android:layout_weight="1"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="HS"
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:layout_width="25pt"
                    android:background="@color/whiteback"
                    android:layout_height="30pt" android:id="@+id/history" android:layout_weight="1"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="AC"
                    android:layout_width="25pt"
                    android:layout_height="30pt" android:id="@+id/button19" android:background="@color/whiteback"
                    android:layout_weight="1" android:textSize="18sp" android:onClick="buClean"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="+/-"
                    android:textSize="18sp"
                    android:layout_width="25pt"
                    android:layout_height="30pt" android:id="@+id/buPlusMinus" android:background="@color/whiteback"
                    android:layout_weight="1"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="%"
                    android:textSize="18sp"
                    android:layout_width="25pt"
                    android:layout_height="30pt" android:id="@+id/button17" android:background="@color/whiteback"
                    android:layout_weight="1" android:onClick="buPercent"/>
            <Button
                    android:textSize="18sp"
                    android:layout_width="25pt"
                    android:layout_height="30pt" android:id="@+id/buDiv" android:text="/"
                    android:background="@color/buop" android:textColor="@color/white" android:layout_weight="1"
                    android:onClick="buOPEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu7" android:background="@color/whiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu8" android:background="@color/whiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu9"
                    android:background="@color/whiteback" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:textSize="18sp"
                    android:text="*"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buMul" android:background="@color/buop"
                    android:textColor="@color/white" android:layout_weight="1" android:onClick="buOPEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu4"
                    android:background="@color/whiteback" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu5"
                    android:background="@color/whiteback" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu6"
                    android:background="@color/whiteback" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:textSize="18sp"
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buSub" android:background="@color/buop"
                    android:textColor="@color/white" android:layout_weight="1" android:onClick="buOPEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu1"
                    android:background="@color/whiteback" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu2"
                    android:background="@color/whiteback" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:textSize="18sp"
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu3" android:background="@color/whiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:textSize="18sp"
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buSum" android:background="@color/buop"
                    android:hapticFeedbackEnabled="true" android:textColor="@color/white" android:layout_weight="1"
                    android:onClick="buOPEvent"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <Button
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:text="0"
                android:layout_width="60pt"
                android:layout_height="30pt" android:id="@+id/bu0" android:layout_weight="1"
                android:background="@color/whiteback" android:onClick="buNumberEvent"/>
        <Button
                android:layout_marginRight="1pt"
                android:textSize="18sp"
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buDot" android:layout_weight="1"
                android:background="@color/whiteback" android:onClick="buNumberEvent"/>
        <Button
                android:textSize="18sp"
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buEqual" android:layout_weight="1"
                android:background="@color/buop" android:textColor="@color/white" android:onClick="buEqualEvent"/>
    </LinearLayout>
</LinearLayout>
